<div class="backgroundScene"></div>
<div class="container">
    <div class="header">
        <h1>Your Tags</h1>
    </div>
    
    <div class="nav">
        <a href="/../welcome/index.html">Home</a>
        <%= link_to 'Calendar', calendar_view_thisMonth_path(:calendar_view_id) %>
        <%= link_to 'Events', events_path %>
        <%= link_to 'Tags', tags_path, { :class => "active" } %>
        <a href="/../welcome/team.html">Team</a>
        <a href="/../welcome/help.html">Help</a>
    </div>
    
    <div class="content">
        <div class="tagsListContainer">
            <% @tags.each do |tag| %>
                <% if tag.id == 1 %>
                    <div class="tagsBox1">
                        <div class="indicator"></div>
                        <%= link_to'<i class="fas fa-eye"></i>'.html_safe, tag_path(tag), :title => "Show Tag", :class => "viewBox" %>
                        <div class="tagVerticalBox1">
                            <div class="tagTitleBox">
                                <%= tag.tagName %>
                            </div>
                            <div class="tagCountBox">
                                Number of Events: <%= tag.events.count %>
                            </div>
                        </div>
                        <div class="tagVerticalBox2">
                            <div class="informationTitleBox">
                                Tag Information:
                            </div>
                            <div class="informationInfoBox">
                                <%= truncate(tag.description, length: 80, separator: ' ', omission: '... (continued)') %>
                            </div>
                        </div>
                        <div class="cap"></div>
                    </div>
                <% else %>
                    <div class="tagsBox">
                        <div class="indicator"></div>
                        <%= link_to'<i class="fas fa-eye"></i>'.html_safe, tag_path(tag), :title => "Show Tag", :class => "viewBox" %>
                        <%= link_to'<i class="fas fa-edit"></i>'.html_safe, edit_tag_path(tag), :title => "Edit Tag", :class => "editBox" %>
                        <%= link_to'<i class="fas fa-trash-alt"></i>'.html_safe, 
                                                                            tag_path(tag),
                                                                            method: :delete,
                                                                            data: { confirm: 'Are you sure you want to delete this tag?' },
                                                                            :title => "Delete Tag",
                                                                            :class => "deleteBox" %>
                        <div class="tagVerticalBox1">
                            <div class="tagTitleBox">
                                <%= tag.tagName %>
                            </div>
                            <div class="tagCountBox">
                                Number of Events: <%= tag.events.count %>
                            </div>
                        </div>
                        <div class="tagVerticalBox2">
                            <div class="informationTitleBox">
                                Tag Information:
                            </div>
                            <div class="informationInfoBox">
                                <%= truncate(tag.description, length: 80, separator: ' ', omission: '... (continued)') %>
                            </div>
                        </div>
                        <div class="cap"></div>
                    </div>
                <% end %>
            <% end %>
        </div>
        
        <%= link_to 'New Tag', new_tag_path, { :class => "basicButton" } %>
    </div>
</div>