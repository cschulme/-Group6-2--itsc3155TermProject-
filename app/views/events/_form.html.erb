<%= semantic_form_for @event do |f| %>
    <%= f.inputs do %>
        <%= f.input :title %>
        <%= f.input :location %>
        <%= f.input :eventInformation, :label => "Event Information" %>
        <%= f.input :startTime, :label => "Starting Time", :as => :datetime_select %>
        <%= f.input :endTime, :label => "Ending Time", :as => :datetime_select %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :reset, :as => :button %>
    <% end %>
<% end %>