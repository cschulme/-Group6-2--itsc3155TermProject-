<div class="backgroundScene"></div>
<div class="container">
    <div class="header">
        <h1>Add New Event</h1>
    </div>
    
    <div class="nav">
        <a href="/../welcome/index.html">Home</a>
        <a href="#">Calendar</a>
        <a href="#">Events</a>
        <a href="#">Team</a>
        <a href="#">About</a>
        <div class="search-container">
            <form action="/action_page.php">
                <input type="text" placeholder="Search events..." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>
    
    <div class="content">
        <%= form_for @event do |f| %>
 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  
  <p>
    <%= f.label :eventInformation %><br>
    <%= f.text_area :eventInformation %>
  </p>
  
  <p>
    <%= f.label :date %><br>
    <%= f.date_field("event", "date") %>
</p>
<p>
    <%= f.submit %>
    </p>

 
<% end %>
    </div>
</div>